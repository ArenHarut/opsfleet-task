flowchart TB
    subgraph Internet["INTERNET"]
        Users["Users"]
    end

    subgraph AWS["AWS Cloud"]
        subgraph Edge["Edge Layer"]
            R53["Route 53 - DNS"]
            CF["CloudFront - CDN + WAF"]
            S3["S3 Bucket - React SPA"]
        end

