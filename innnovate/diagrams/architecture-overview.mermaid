                ALB["Application Load Balancer"]
                NAT["NAT Gateways"]
            end

            subgraph Private["Private Subnets - Application"]
                subgraph EKS["EKS Cluster"]
                    API["Flask API Pods"]
                    Ingress["Ingress Controller"]
                    HPA["HPA Auto-scaling"]
                end
            end

            subgraph Database["Private Subnets - Database"]
                RDS_Primary["RDS PostgreSQL Primary"]
                RDS_Standby["RDS PostgreSQL Standby"]
            end
        end

        subgraph Services["Supporting Services"]
            ECR["ECR Container Registry"]
            SM["Secrets Manager"]
            KMS["KMS Encryption"]
            CW["CloudWatch Monitoring"]
            GD["GuardDuty Security"]
        end
    end

    subgraph CICD["CI/CD Pipeline"]
        GH["GitHub"]
        GHA["GitHub Actions"]
        ARGO["ArgoCD"]
    end

    Users --> R53
    R53 --> CF
    CF --> S3
    CF --> ALB
    ALB --> Ingress
    Ingress --> API
    API --> RDS_Primary
    RDS_Primary <-.->|Sync Replication| RDS_Standby
    
    GH --> GHA
    GHA --> ECR
    ECR --> ARGO
